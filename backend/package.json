{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "npx tsc -b",
    "watch:ts": "tsc --watch",
    "watch:js": "nodemon --watch dist --exec node dist/index.js",
    "migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev",
    "migrate:prod": "dotenv -e .env.production -- npx prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "dev": "cross-env NODE_ENV=development dotenv -e .env.development -- concurrently \"npm run watch:ts\" \"npm run watch:js\"",
    "start": "cross-env NODE_ENV=production dotenv -e .env.production -- sh -c \"npm run migrate:prod && npm run prisma:generate && npm run build && node dist/index.js\""
  },
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "@prisma/extension-accelerate": "^2.0.2",
    "bcrypt": "^6.0.0",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^6.4.17",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.11.1",
    "typescript": "^5.8.3"
  }
}
